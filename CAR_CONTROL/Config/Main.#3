#include "Config.h"


//------------------------------------------------------------------------------//
//                               Main function                                  //
//------------------------------------------------------------------------------//

sbit LED0 =  P2^0; //Светодиоды	
sbit LED1 =	P2^1;	
sbit LED2 =	P2^2;		
sbit LED3 =	P2^3;


void main(void)
{
	
	PCA0MD &= ~0x40; // Disable the watchdog timer 
	Init_Device();
	 
	LED0 = 1;
	LED1 = 0;
	LED2 = 1;
	LED3 = 0;

	while(1) {
		LED0 = ~ LED0;
		LED1 = ~ LED1;
		LED2 = ~ LED2;
		LED3 = ~ LED3;
	};

}